# Корневой файл EditorConfig
root = true

# Для всех файлов используем unix-совместимые переносы строк
[*]
end_of_line = lf # Позволяет выбрать, что использовать на концах строк. Значения: lf, cr, crlf
insert_final_newline = false # Позволяет убедиться, что в конце файла всегда будет новая строка. Значения: true, false
charset = utf-8 #Установить кодировку по умолчанию Значения: latin1, utf-8, utf-8-bom, utf-16be, utf-16le
indent_style = tab  # Позволяет задать жесткую или мягкую табуляцию для отступов. Значения: tab, space
indent_size = 4 # Позволяет задать ширину отступа использовании мягкой табуляции.
trim_trailing_whitespace = true # Позволяет убрать пробелы из концов строк. Значения: true, false